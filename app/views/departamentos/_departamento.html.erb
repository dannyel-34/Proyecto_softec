<tr id=<%= "departamento_#{departamento.id}" %>>
   <td><%= departamento.nombre %></td>
   <td><%= link_to 'Mostrar', departamento, remote: true, class: "btn btn-primary" %></td>
   <td><%= link_to 'Editar', edit_departamento_path(departamento), remote: true, class: "btn btn-success"  %></td>
   <td><%= link_to 'Eliminar', departamento, method: :delete, remote: true,  data: { confirm: 'Esta Seguro?' }, class: "btn btn-danger" %></td>
</tr>   