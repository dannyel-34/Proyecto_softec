<h1>Listado de estudiantes</h1>


<div class="container">
    
  <div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Panel success</h3>
  </div>
  <div class="panel-body">

<%= form_tag dato_estudiantes_path, :method => 'get' do %>
     <% content_tag :label do %>
        <h5 class="bus">Buscar:</h5>
        <%= autocomplete_field_tag 'doc_identidad', '', autocomplete_municipio_nombre_dato_estudiantes_path, :size => 75, id: "inp1", placeholder: "codigo", class: "form-control lg-6" %>
     <% end %>
<% end %>

<button class="btn btn-success btn-sm" name="nil", id="btn-1">
    <%= image_tag("search.png") %>
</button>

<br>
    </div>
</div>

<br>


<div class="panel panel-success">
    <div class="panel-heading" role="tab" id="headingThree">
      <h4 class="panel-title">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Importar Datos Ocultar/Mostrar
        </a>
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">
<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>fecha</th>
      <th>Edad</th>
      <th>Mail</th>
      <th>Tipo</th>
      <th>documento</th>
      <th>Curso</th>
      <th>Grado</th>
      <th>Pais</th>
      <th>Municipio</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Genero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <%= render @dato_estudiantes %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Alumno', new_dato_estudiante_path, remote: true, class: "btn btn-info" %>

<%= will_paginate @dato_estudiantes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Alumnos: <%= @dato_estudiantes.count %>
    
    </div>
  </div>
</div>
     