<h1 class="tt2">Listado de documentos</h1>


<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Busqueda </h3>
  </div>
  <div class="panel-body">
      
      <br>

<%= form_tag tipo_documentos_path, :method => 'get' do %>
     <% content_tag :label do %>
         <h5 class="bus">Buscar:</h5>
         <%= text_field_tag :search, params[:search], id: "inp1", placeholder: "nombres", class: 'form-control lg-6' %>
     <% end %>
<% end %>


<button class="btn btn-primary btn-sm" name="nil", id="btn-1">
    <%= image_tag("search.png") %>
</button>

<br>

 </div>
</div>

<br>

<br>

<br>

<br>


<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">Agregar documentos de identidad</h3>
  </div>
  <div class="panel-body">
<div class="table-responsive">
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <%= render @tipo_documentos %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo documento', new_tipo_documento_path, remote: true, class: "btn btn-info"  %>

<br>


<br>
Documentos de identidad: <%= @tipo_documentos.count %>

<br>
<%= will_paginate @tipo_documentos, renderer: BootstrapPagination::Rails, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;', class: 'pagination pagination-sm', id: 'pag-1' %>

</div>
</div>
</div>